[run]
source = src
omit =
    */tests/*
    */test_*
    */__pycache__/*
    */site-packages/*
    */venv/*
    */.venv/*
    */migrations/*
    */alembic/*
    */conftest.py
    */setup.py
    */manage.py
    */wsgi.py
    */asgi.py

branch = True
parallel = True

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

ignore_errors = True
show_missing = True
skip_covered = False
precision = 2

[html]
directory = htmlcov
title = Novellus API Test Coverage Report

[xml]
output = coverage.xml

[paths]
source =
    src/
    */site-packages/src/