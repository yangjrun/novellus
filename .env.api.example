# Novellus FastAPI Configuration
# Copy this file to .env and update with your values

# ==========================================
# Application Settings
# ==========================================
APP_NAME=Novellus API
VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ==========================================
# Server Settings
# ==========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4  # Number of worker processes (production only)
AUTO_RELOAD=true  # Auto-reload on code changes (dev only)
ACCESS_LOG_ENABLED=true

# ==========================================
# Database Configuration
# ==========================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=novellus
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=novellus
MONGODB_USER=
MONGODB_PASSWORD=

# ==========================================
# Cache Configuration (Redis)
# ==========================================
CACHE_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=300  # Cache TTL in seconds

# ==========================================
# Authentication & Security
# ==========================================
AUTH_ENABLED=false
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API Keys (comma-separated for multiple keys)
API_KEYS=key1,key2,key3

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT=100  # Requests per minute
RATE_LIMIT_BURST=10  # Burst capacity

# ==========================================
# CORS Settings
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
TRUSTED_HOSTS=localhost,127.0.0.1

# ==========================================
# Claude API Settings
# ==========================================
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.8

# ==========================================
# Cost Control
# ==========================================
DAILY_COST_LIMIT=10.0
MONTHLY_COST_LIMIT=100.0
MAX_REQUESTS_PER_MINUTE=5
MAX_CONCURRENT_REQUESTS=3

# ==========================================
# File Upload Settings
# ==========================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=.json,.txt,.md,.csv

# ==========================================
# Monitoring & Observability
# ==========================================
MONITORING_ENABLED=false
METRICS_ENDPOINT=/metrics
SENTRY_DSN=  # Sentry error tracking DSN

# ==========================================
# Pagination Defaults
# ==========================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==========================================
# Docker-specific Settings
# ==========================================
# Use these when running with docker-compose
# POSTGRES_HOST=postgres
# MONGODB_HOST=mongodb
# REDIS_HOST=redis

# ==========================================
# Production Settings
# ==========================================
# Uncomment for production deployment
# ENVIRONMENT=production
# DEBUG=false
# AUTO_RELOAD=false
# AUTH_ENABLED=true
# LOG_LEVEL=WARNING
# CACHE_ENABLED=true
# MONITORING_ENABLED=true